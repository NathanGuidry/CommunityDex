<%- layout('layouts/boilerplate') %>
    <h1>Login</h1>

    <div class="col-6 offset-3">
        <form action="/login" method="POST" class="validatedForm" novalidate>
            <div class="mb-3">
                <label class="form-label" for="username">Username: </label>
                <input class="form-control" type="text" placeholder="Username" name="username" id="username" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="password">Password: </label>
                <input class="form-control" type="password" placeholder="Password" name="password" id="password" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <button class="btn btn-success">Login</button>
        </form>
        <form action="/register" class="mt-3">
            <p class="d-inline">Don't have an account?</p>
            <button class="btn btn-primary">Register</button>
        </form>
    </div>